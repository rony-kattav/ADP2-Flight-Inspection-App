<Window x:Class="ADP2_Flight_Inspection_App.PopupDetection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADP2_Flight_Inspection_App"
      d:DataContext="{d:DesignInstance Type=local:Detection}"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="PopupDetection">

    <Grid>
        <ListView Margin="10" Name="detectionList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Feature1" Width="200" DisplayMemberBinding="{Binding Feature1}"/>
                    <GridViewColumn Header="Feature2" Width="200" DisplayMemberBinding="{Binding Feature2}"/>
                    <GridViewColumn Header="Time" Width="200" DisplayMemberBinding="{Binding Time}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
