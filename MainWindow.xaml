<Window x:Class="ADP2_Flight_Inspection_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADP2_Flight_Inspection_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="44" TextWrapping="Wrap" Text="Enter CSV path" VerticalAlignment="Top" Width="271" Margin="77,128,0,0" TextChanged="CsvBox_TextChanged" FontSize="30" Name="csvText" />
        <TextBox x:Name="xmlText" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="44" TextWrapping="Wrap" Text="Enter XML path" VerticalAlignment="Top" Width="279" RenderTransformOrigin="4.376,7.217" Margin="77,216,0,0" FontSize="30" TextChanged="XmlBox_TextChanged"/>
        <Button x:Name="Apply" Grid.ColumnSpan="5" Content="Apply" HorizontalAlignment="Left" Height="66" Margin="281,307,0,0" VerticalAlignment="Top" Width="219" FontSize="30" Background="#FFF1C1F5" Click="Apply_Click"/>
        <Label Grid.ColumnSpan="5" Content="Please enter the file paths" HorizontalAlignment="Left" VerticalAlignment="Top" Width="356" Margin="192,25,0,0" FontSize="30"/>

    </Grid>
</Window>
